@model VIPS.Models.ViewModels.Account.ForgotPassword.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "_Layout";
}

<form asp-controller="Account" asp-action="ForgotPasswordSendEmail" asp-antiforgery="true" method="POST" class="form-horizontal">
    <div class="form-group">
        <label class="control-label" asp-for="Email">Email:</label>
        <input class="form-control" asp-for="Email" />
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>
