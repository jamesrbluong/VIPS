@model VIPS.Models.ViewModels.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h4>Requirements: </h4>
<a>Username: enter a valid UNF email address (example@unf.edu)</a>
<br />
<a>Password: must contain at least one number, uppercase and lowercase letter, and be at least 8 or more characters</a>
<!--<div class="text-danger" asp-validation-summary="All"></div>-->
<div class="box-padding">
    <div class="box-container">
        <br />
        <h2 class="box-heading">Login</h2>
        <br />

        <form asp-controller="Account" asp-action="LoginAccount" method="POST" class="box-form">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group">
                <label asp-for="Email"></label>
                <div><span asp-validation-for="Email" class="text-danger"></span></div>
                <input asp-for="Email" class="form-control" type="text" pattern="^[a-zA-Z0-9._%+-]+@@unf\.edu$" title="Please enter a valid UNF email address (example@unf.edu)" required />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <div><span asp-validation-for="Password" class="text-danger"></span></div>
                <input asp-for="Password" type="Password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number, one special character, one uppercase and lowercase letter, and at least 8 or more characters"  required/>
            </div>
            <input type="checkbox" value="lsRememberMe" id="rememberMe" class="box-rememberMe">
            <label for="rememberMe">Remember Me</label>
            <a asp-controller="Account" asp-action="ForgotPassword" class="box-forgotPassword">Forgot Password</a>
            <br /><br /><br />
            <button class="box-button" type="submit">Submit</button>
            <p class="box-bottomtext">Don't have an account yet?</p>
            <a asp-controller="Account" asp-action="Create" class="box-bottomtext">Sign Up</a>

        </form>

    </div>

</div>

