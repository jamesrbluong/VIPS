@model VIPS.Models.ViewModels.Account.CreateViewModel

@{
    ViewData["Title"] = "Create User Account";
    Layout = "_Layout";
}

<!--<div asp-validation-summary="All" class="text-danger"></div>-->

<h4>Requirements: </h4>
<a>Username: enter a valid UNF email address (example@unf.edu)</a>
<br />
<a>Password: must contain at least one number, uppercase and lowercase letter, and be at least 8 or more characters</a>
<div class="box-padding">
    <div class="box-container">
        <br />
        <h2 class="box-heading">Sign Up</h2>
        <br />
        <form asp-controller="Account" asp-action="CreateAccount" asp-antiforgery="true" method="POST" class="box-form">
            <div class="form-group">
                <label class="control-label" asp-for="Email">Email</label>
                <input class="form-control" asp-for="Email" type="text" pattern="^[a-zA-Z0-9._%+-]+@@unf\.edu$" title="Please enter a valid UNF email address (example@unf.edu)" required />
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Password">Password</label>
                <input class="form-control" asp-for="Password" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters"  required/>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="ConfirmPassword">Confirm Password</label>
                <input class="form-control" asp-for="ConfirmPassword" type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required />
            </div>
            <br />
            <button type="submit" class="box-button">Create</button>
            <p class="box-bottomtext">Already have an account?</p>
            <a asp-controller="Account" asp-action="Login" class="box-bottomtext">Login</a>
                
            
        </form>

    </div>

</div>
