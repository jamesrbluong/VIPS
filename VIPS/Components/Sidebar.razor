<div class="sidebar@(IsShown ? "" : " hidden")">
    <div class="container">
        <p>1</p>
        <p>2</p>
        <p>3</p>
        <p>4</p>
    </div>

</div>



@code {
    [Parameter]
    public bool IsShown { get; set; }

    [Parameter]
    public int Width { get; set; } 

}

<style>
    .sidebar {
        background-color: dimgrey;
        float: right;
        min-width: @($"{Width}px");
        max-width: @($"{Width}px");
        transition: var(--transition-props);
    }

        .sidebar.hidden {
            margin-left: @($"-{Width}px");
            visibility: hidden;
            transition: var(--transition-props);
        }

        .sidebar:hover {
            opacity: 0.9;
        }
</style>
